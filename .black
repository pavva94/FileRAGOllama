[tool.black]
# Line length that matches flake8 and other tools
line-length = 88

# Python versions to target
target-version = ['py38', 'py39', 'py310', 'py311', 'py312']

# Include file extensions
include = '\.pyi?$'

# Exclude directories and files
exclude = '''
/(
    \.eggs
  | \.git
  | \.hg
  | \.mypy_cache
  | \.tox
  | \.venv
  | _build
  | buck-out
  | build
  | dist
  | venv
  | __pycache__
  | \.pytest_cache
  | migrations
)/
'''

# Enable preview features (optional)
# preview = true

# Skip string normalization (keeps quotes as you wrote them)
skip-string-normalization = false

# Skip magic trailing comma
skip-magic-trailing-comma = false